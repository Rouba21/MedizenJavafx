<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ItemController">
    <children>
        <HBox alignment="CENTER" prefHeight="150.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #012841, #ffffff); -fx-padding: 10;">
            <children>
                <ImageView fx:id="imgproduit" fitHeight="180.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets top="10.0" left="10.0" />
                    </HBox.margin>
                </ImageView>
                <VBox prefHeight="150.0" prefWidth="250.0" spacing="10.0">
                    <children>
                        <Label fx:id="txtnom" text="Nom produit" textFill="white">
                            <font>
                                <Font name="Tahoma Bold" size="13.0" />
                            </font>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </Label>
                        <Label fx:id="txtprix" text="prix" textFill="white">
                            <font>
                                <Font name="Tahoma Bold" size="12.0" />
                            </font>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </Label>
                        <Label fx:id="txtdesc" text="desc" textFill="white">
                            <font>
                                <Font name="Tahoma Bold" size="12.0" />
                            </font>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </Label>
                        <Button fx:id="buyButton" mnemonicParsing="false" style="-fx-background-color: #E6E6FA;" text="Buy Now" textFill="#258922" onAction="#handleBuyButtonAction" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
