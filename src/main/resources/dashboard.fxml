<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.DashboardController">
    <children>
        <!-- Navbar -->
        <VBox style="-fx-background-color: #ffffff;" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" spacing="5">
            <HBox style="-fx-padding: 10px; -fx-alignment: center; -fx-spacing: 10px;">
                <!-- Logo Image -->
                <ImageView fitHeight="50" fitWidth="50">
                    <!-- Your logo image source here -->
                </ImageView>
                <!-- Search Bar -->
                <TextField fx:id="searchBar" promptText="Search..." style="-fx-font-size: 14px; -fx-pref-width: 200px;" />
                <!-- Navbar Buttons -->
                <Button text="Home" style="-fx-background-color: #3a9ff1; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px;" />
                <Button text="Profile" style="-fx-background-color: #3a9ff1; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px;" />
                <Button text="Logout" style="-fx-background-color: #3a9ff1; -fx-text-fill: #0a091e; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px;" />
            </HBox>
        </VBox>

        <!-- Sidebar -->
        <VBox style="-fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-width: 1px; -fx-border-radius: 500px;" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="0.0" spacing="10" prefWidth="200">
            <!-- Sidebar Buttons -->
            <Button text="Option 1" style="-fx-background-color: #ffffff; -fx-text-fill: #3db2f1; -fx-font-size: 25px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
            <Button text="Option 2" style="-fx-background-color: #ffffff; -fx-text-fill: #2fe7ff; -fx-font-size: 25px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
            <Button text="Option 3" style="-fx-background-color: #eff1f1; -fx-text-fill: #1f88d3; -fx-font-size: 25px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
        </VBox>

        <!-- Content Area -->
        <GridPane fx:id="gridPane" layoutX="200.0" layoutY="50.0" AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="205.0" />
    </children>
</AnchorPane>
